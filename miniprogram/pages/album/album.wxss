/* pages/album/album.wxss */
page {
  background: #f5cdb3;
}
.albums {
  padding: 24rpx;
  font-size: 32rpx;
}

.albums .album {
  margin-bottom: 24rpx;
  padding: 24rpxx;
  position: relative;
  width: 350rpx;
  height: 300rpx;
}

.album-left {
  float: left;
}

.album-right {
  float: right;
}

.first-photo {
  width: 350rpx;
  height: 250rpx;
  background-color: #fff;
}

.first-photo view {
  width:100%;
  height:100%;
  background-size: contain;
  background-position: 50%;
  background-repeat: no-repeat;
}

.album-info {
  display: table-cell;
  vertical-align: middle;
  width: 350rpx;
  height: 50rpx;
  font-size: 0;
  background-color: #ffffff;
  border-top:1px solid #eee;
}

.albums .album .name{
  float: left;
  margin-left: 4px;
  width: 200rpx;
  font-size: 22rpx;
}

.photo-total {
  float: right;
  text-align: center;
  vertical-align: top;
  /* background: #220707; */
  color: rgb(37, 18, 18);
  font-size: 22rpx;
  padding: 0 16rpx;  
}

.add {
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 2em;
  height: 130px;
  width: 100%;
  z-index: 300;
  left: 0
}

.add-select{
  width: 100%;
  height: 80px;
}

.add-photo {
  float: left;
  width: 50%;
}

.item {
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 0 4px;
  border-radius: 14px;
  background-color: rgb(209, 198, 198);
}

.icon {
  display: inline-block;
  width: 50px;
  height: 50px;
  background-size: cover;
  margin: 0 auto;
}

.add-album {
  float: right;
  width: 50%;
}

.shadow {
  display: block;
  width: 100%;
  height: 100%;
  bottom: 0;
  position: fixed;
  top: 0px;
  left: 0px;
  background-color: #1a1313;
  opacity: 0.7;
  z-index: 200;
}

.options {
  display: flex;
  flex-direction: row;
  /* position: fixed;   */
  bottom: 2em;
  height: 138rpx;
  width: 100%;
  z-index: 100;
  left: 0;  
}

.add-close {
  display: inline-block;
  width: 100%;
  height: 50px;
}

.options .add-item {
  display: block;
  margin: 0 auto;
  width: 400rpx;
  height: 90rpx;  
  border-radius:25rpx;
  background:#eb5b07;
  color:#fff;
}

.close-item {
  display: block;
  margin: 0 auto;
  text-align: center;
  height: 38px;
  border-radius: 38px;
  line-height: 38px;
}

