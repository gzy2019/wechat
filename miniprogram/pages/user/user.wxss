/* pages/user/user.wxss */
/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.userinfo > button {
    background-color: #fd811c;
    border: 0 transparent solid;
    color: #fff;
    font-size: 16px;
    height: 32px;
    line-height: 32px;
}

.userinfo > .hint {
    margin-bottom: 30px;
}
